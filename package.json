{
	"name": "activitypub-relay-monorepo",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "concurrently \"pnpm --filter relay dev\" \"pnpm --filter frontend dev\"",
		"dev:relay": "pnpm --filter relay dev",
		"dev:frontend": "pnpm --filter frontend dev",
		"build": "pnpm --filter frontend build",
		"deploy": "pnpm build && pnpm --filter relay run deploy",
		"check": "biome check",
		"fix": "biome check --write",
		"fix-unsafe": "biome check --write --unsafe",
		"db:generate": "pnpm --filter relay db:generate",
		"db:migrate": "pnpm --filter relay db:migrate",
		"db:migrate:prod": "pnpm --filter relay db:migrate:prod"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"concurrently": "^9.2.1",
		"typescript": "^5.9.3"
	},
	"pnpm": {
		"overrides": {
			"@orpc/contract": "^1.9.3",
			"zod": "^4.1.11",
			"wrangler>zod": "^3.23.8",
			"miniflare>zod": "^3.23.8"
		},
		"onlyBuiltDependencies": [
			"@prisma/client",
			"@prisma/engines",
			"esbuild",
			"prisma",
			"sharp",
			"workerd"
		]
	},
	"type": "module"
}
